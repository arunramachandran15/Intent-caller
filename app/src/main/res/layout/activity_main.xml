<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.telyutils.ycaller.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

    <TextView
        style="@style/TextBasic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Phone Number"/>


    <EditText
        android:id="@+id/eTextPhone"
        style="@style/TextBasic"
        android:inputType="phone"
        android:hint="Ex : 9730195442"
        android:digits="0123456789+"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <TextView
        style="@style/TextBasic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Y Message"/>



    <EditText
        android:id="@+id/eTextYMessage"
        style="@style/TextBasic"
        android:hint="Hey, its Urgent !!!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/btnCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_dark"
            android:text="CAll"/>

        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_dark"
            android:text="EDIT Your Profile"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go To Contacts"
            android:id="@+id/button2"
            android:gravity="center"
            android:layout_marginTop="38dp" />


    </LinearLayout>



</RelativeLayout>
